{% include '@app/header.twig' %}

<div class="col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <form method="post" name="save_form" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <label class="control-label col-md-4 col-xs-12 col-sm-5">
                        {% helper lang.l('field_min_message_chars', 'operators') %}:
                    </label>
                    <div class="col-md-5 col-xs-12 col-sm-5">
                        <input type="number" min="0" step="1" name="operator_message_min_chars" class="form-control" value="{{ settings.operator_message_min_chars }}" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-md-4 col-xs-12 col-sm-5">
                        {% helper lang.l('field_max_message_chars', 'operators') %}:
                    </label>
                    <div class="col-md-5 col-xs-12 col-sm-5">
                        <input type="number" min="0" step="1" name="operator_message_max_chars" class="form-control" value="{{ settings.operator_message_max_chars }}" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-md-4 col-xs-12 col-sm-5">
                        {% helper lang.l('field_time_to_answer', 'operators') %}:
                    </label>
                    <div class="col-md-5 col-xs-12 col-sm-5">
                        <input type="number" min="0" step="1" name="operator_message_time_to_answer" class="form-control" value="{{ settings.operator_message_time_to_answer }}" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-md-4 col-xs-12 col-sm-5">
                        {% helper lang.l('field_operator_message_cost', 'operators') %}
                        ({% helper start.currency_format_output({'no_tags': true, 'not_virtual': true})%}):
                    </label>
                    <div class="col-md-5 col-xs-12 col-sm-5">
                        <input type="number" min="0" step="0.01" name="operator_message_cost" class="form-control" value="{{ settings.operator_message_cost }}" />
                    </div>
                </div>
