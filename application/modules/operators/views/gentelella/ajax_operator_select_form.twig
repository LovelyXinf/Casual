<div class="load_content_controller">
    <div class="x_title h2">
        {% helper lang.l('header_user_select', 'users') %}
    </div>
    <div>
        {% if select_data.max_select != 1 %}
            <b>{% helper lang.l('header_users_selected', 'users') %}:</b><br>
            <ul id="user_selected_items{{ select_data.rand }}" class="user-items-selected">
                {% for item in select_data.selected %}
                    <li>
                        <div class="user-block">
                            <input type="checkbox" name="remove_users[]" value="{{ item.id }}" checked class="flat">
                            {{ item.nickname }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
            <div class="clearfix"></div>
        {% endif %}

        <b>{% helper lang.l('header_user_find', 'users') %}:</b><br>
        <input type="text" id="user_search{{ select_data.rand }}" class="form-control controller-search">

        <ul class="controller-items" id="user_select_items{{ select_data.rand }}" style="padding-top:10px; border-top:none;"></ul>

        <div class="controller-actions">
            <div class="pull-left">
                <a href="#" id="user_close_link{{ select_data.rand }}" class="hide">
                    {% helper lang.l('btn_close', 'start') %}
                </a>
            </div>
            <div id="user_page{{ select_data.rand }}" class="pages pull-right"></div>
        </div>
    </div>
</div>
