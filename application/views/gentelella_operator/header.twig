<!DOCTYPE html>
<html DIR="{{ _LANG.rtl }}" lang="{{ _LANG.code }}">
<head>
    <meta http-equiv="X-UA-Compatible">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="expires" content="0">
    <meta http-equiv="pragma" content="no-cache">
    <meta name="revisit-after" content="3 days">
    <meta name="robot" content="All">
    {% helper seo.seo_tags('title|description|keyword|canonical|og_title|og_type|og_url|og_image|og_site_name|og_description') %}
    <script src="{{ site_root }}application/views/gentelella_operator/js/jquery.min.js"></script>
    <script type="text/javascript" src="{{ site_root }}application/views/gentelella_operator/js/loading_content.js"></script>

    <!-- Bootstrap core CSS -->
    <link href="{{ site_root }}application/views/gentelella_operator/css/bootstrap.min.css" rel="stylesheet">

    <link href="{{ site_root }}application/views/gentelella_operator/css/font-awesome.min.css" rel="stylesheet">
    <link href="{{ site_root }}application/views/gentelella_operator/css/animate.min.css" rel="stylesheet">
    <link href="{{ site_root }}application/views/gentelella_operator/js/pnotify/pnotify.css" rel="stylesheet">
    <link href="{{ site_root }}application/js/emoji-picker/css/emoji.css" rel="stylesheet">
    {# <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> #}

    {% helper theme.js(load_type) %}
    {% helper theme.css(load_type) %}
    <script type="text/javascript">
        var site_url = '{{ site_url }}';
        var site_rtl_settings = '{{ _LANG.rtl }}';
        var site_error_position = {% if  _LANG.rtl == 'ltr' %}"left"{% else %}"right"{% endif %};
    </script>

    {% helper start.favicon({'type': 'operator'}) %}

    <!-- Custom styling plus plugins -->
    <link href="{{ site_root }}application/views/gentelella_operator/css/icheck/flat/green.css" rel="stylesheet" />
    <link href="{{ site_root }}application/views/gentelella_operator/css/floatexamples.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript">
        var jQueryShow = $.fn.show;
        $.fn.show = function() {
            jQueryShow.apply(this);
            this.removeClass('hide');
            return this;
        };
    </script>
    {# {% helper start.analytics() %} #}
    {% helper utils.jscript('', 'easyTooltip.min.js') %}
    {# {% helper seo_advanced.seo_traker('top', true) %} #}
</head>

<body class="nav-md">
    <div id="error_block">
        {% for item in _PREDEFINED.error %}
            {% if item.text %}
                {{ item.text }}<br>
            {% endif %}
        {% endfor %}
    </div>
    <div id="info_block">
        {% for item in _PREDEFINED.info %}
            {% if item.text %}
                {{ item.text }}<br>
            {% endif %}
        {% endfor %}
    </div>
    <div id="success_block">
        {% for item in _PREDEFINED.success %}
            {% if item.text %}
                {{ item.text }}<br>
            {% endif %}
        {% endfor %}
    </div>

    <div class="container body {% if (login_page) %} container_loginpage {% endif %}">
        <!-- Left column -->
        <div class="left-sidebar" id="left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title">
                    <a class="site_title" href="{{ site_url }}operator/">
                        <img src="{{ site_root }}{{ logo_settings.path }}" border="0" alt="logo"
                            width="{{ logo_settings.width }}" height="{{ logo_settings.height }}" class="site-logo">
                            <img src="{{ site_root }}{{ mini_logo_settings.path }}" border="0" alt="logo"
                                width="{{ mini_logo_settings.width }}" height="{{ mini_logo_settings.height }}" class="site-mini-logo">
                    </a>
                </div>
                <div class="clearfix"></div>

                <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                <!-- Menu -->
                {% helper menu.getOperatorMainMenu() %}
                </div>
            </div>
        </div>
        <!-- Right column -->
        <div class="main_container">
            {#<div class="right-sidebar">#}
                {% if not(login_page) %}
                    <div id="top_nav" class="top_nav">
                        <div class="nav_menu {% if menu_disabled %}hide{% endif %}">

                            <nav role="navigation">
                                <div class="clearfix">
                                    <div class="nav toggle">
                                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                                    </div>
                                    {% if auth_type == 'operator' %}
                                        <ul class="nav navbar-nav navbar-right">
                                            <li>
                                                <ul class="list-inline">
                                                    {% if auth_type == 'operator' %}
                                                        <li>
                                                            <a href="{{ site_url }}operator/start/logout" class="logoff">
                                                                {% helper lang.l('link_logoff', 'ausers') %}
                                                            </a>
                                                        </li>
                                                    {% endif %}
                                                    <li>
                                                        {% helper operators.langSelect() %}
                                                    </li>
                                                    <li>
                                                        {% helper operators.currentBalance() %}
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    {% endif %}
                                </div>
                            </nav>
                        </div>
                        <script src="{{ site_root }}application/views/gentelella_operator/js/menu.js"></script>
                    </div>
                {% endif %}
                <div class="right_col" role="main">
                    <div class="right-sidebar">
                        <div class="page-title {% if login_page %}hide{% endif %}">
                            {% if _PREDEFINED.back_link %}
                            <div class="quest-block back-link">
                                <a href="{{ _PREDEFINED.back_link }}" class="back">
                                    {% helper lang.l('btn_back', 'start') %}</a>&nbsp;
                            </div>
                            {% endif %}
                            <div class="title_left">
                                <h3>{{ _PREDEFINED.header }}</h3>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="row">

